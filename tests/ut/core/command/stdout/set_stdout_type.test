#!/usr/bin/env bats

#
# setup
#

setup() {
  # load common lib
  load '../../../../lib/common'
  
  # load bash util
  __test__load_bash_util
  
  # set command name
  __test__command='bash_util__command__set_stdout_type'
}

#
# tear down
#

# teardown() {
# }

#
# test definitions
#

# ==============================================================================
# sets type
# ==============================================================================

@test "returns OK when settings stdout type" {
  # setup
  local __test__expected_exit_code="${BASH_UTIL__CODE__OK}"
  
  # execute
  local __test__exit_code=
  {
    "${__test__command}" "${BASH_UTIL__TYPE__STRING}"
    __test__exit_code=$?
  } || {
    __test__exit_code=$?
  }
  
  # debug info on failure
  echo >&2 "expected exit code: ${__test__expected_exit_code}"
  echo >&2 "exit code: ${__test__exit_code}"
  
  # assert
  [[ "${__test__exit_code}" -eq "${__test__expected_exit_code}" ]]
}

# ==============================================================================

@test "sets stdout type" {
  local __test__expected_output="${BASH_UTIL__TYPE__STRING}"
  
  # execute
  local __test__exit_code=
  {
    "${__test__command}" "${BASH_UTIL__TYPE__STRING}"
    __test__exit_code=$?
  } || {
    __test__exit_code=$?
  }
  
  local __test__output=
  __test__output="$(bash_util__command__get_stdout_type)"

  # debug output
  echo >&2 "exit code: ${__test__exit_code}"
  echo >&2 "expected output"
  echo >&2 "----------------"
  echo >&2 "${__test__expected_output}"
  echo >&2 "----------------"
  echo >&2 "output"
  echo >&2 "----------------"
  echo >&2 "${__test__output}"
  echo >&2 "----------------"
  
  # assert
  [[ "${__test__output}" = "${__test__expected_output}" ]]
}
