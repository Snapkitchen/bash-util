# prints value at specified index
# ==============================================================================

@test "returns OK when printing value at specified index" {
  # setup
  local __test__expected_exit_code="${BASH_UTIL__CODE__OK}"
  
  bash_util__list__create 'var_name'
  bash_util__list__append 'var_name' 'value'

  # execute
  local __test__exit_code=
  {
    "${__test__command}" 'var_name' 0
    __test__exit_code=$?
  } || {
    __test__exit_code=$?
  }
  
  # debug info on failure
  echo >&2 "expected exit code: ${__test__expected_exit_code}"
  echo >&2 "exit code: ${__test__exit_code}"
  
  # assert
  [[ "${__test__exit_code}" -eq "${__test__expected_exit_code}" ]]
}

# ==============================================================================

@test "prints value at specified index" {
  # setup
  local __test__expected_output='value'

  bash_util__list__create 'var_name'
  bash_util__list__append 'var_name' 'value'

  # execute
  local __test__output=
  local __test__exit_code=
  {
    __test__output=$("${__test__command}" 'var_name' 0)
    __test__exit_code=$?
  } || {
    __test__exit_code=$?
  }

  # debug output
  echo >&2 "exit code: ${__test__exit_code}"
  echo >&2 "expected output"
  echo >&2 "----------------"
  echo >&2 "${__test__expected_output}"
  echo >&2 "----------------"
  echo >&2 "output"
  echo >&2 "----------------"
  echo >&2 "${__test__output}"
  echo >&2 "----------------"

  [[ "${__test__output}" = "${__test__expected_output}" ]]
}
