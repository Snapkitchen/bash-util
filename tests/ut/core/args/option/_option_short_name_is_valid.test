#!/usr/bin/env bats

#
# setup
#

setup() {
  # load common lib
  load '../../../../lib/common'
  
  # load bash util
  __test__load_bash_util
  
  # set command name
  __test__command='_bash_util__args__option_short_name_is_valid'
}

#
# tear down
#

# teardown() {
# }

#
# test definitions
#

# ==============================================================================
# null value
# ==============================================================================

@test "returns FALSE when value is null" {
  # setup
  local __test__expected_exit_code="${BASH_UTIL__CODE__FALSE}"
  
  # execute
  local __test__exit_code=
  {
    "${__test__command}" ''
    __test__exit_code=$?
  } || {
    __test__exit_code=$?
  }
  
  # debug info on failure
  echo >&2 "expected exit code: ${__test__expected_exit_code}"
  echo >&2 "exit code: ${__test__exit_code}"
  
  # assert
  [[ "${__test__exit_code}" -eq "${__test__expected_exit_code}" ]]
}

# ==============================================================================

@test "prints stderr message when value is null" {
  # setup
  local __test__expected_output="invalid option short name: ''"

  # execute
  local __test__output=
  local __test__exit_code=
  {
    __test__output="$("${__test__command}" '' 2>&1 1>/dev/null)"
    __test__exit_code=$?
  } || {
    __test__exit_code=$?
  }

  # debug output
  echo >&2 "exit code: ${__test__exit_code}"
  echo >&2 "expected output"
  echo >&2 "----------------"
  echo >&2 "${__test__expected_output}"
  echo >&2 "----------------"
  echo >&2 "output"
  echo >&2 "----------------"
  echo >&2 "${__test__output}"
  echo >&2 "----------------"

  # assert
  [[ "${__test__output}" = *"${__test__expected_output}"* ]]
}

