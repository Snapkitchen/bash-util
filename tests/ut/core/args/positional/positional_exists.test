#!/usr/bin/env bats

#
# setup
#

setup() {
  # load common lib
  load '../../../../lib/common'
  
  # load bash util
  __test__load_bash_util
  
  # set command name
  __test__command='bash_util__args__positional_exists'
}

#
# tear down
#

# teardown() {
# }

#
# test definitions
#

# ==============================================================================
# positional exists
# ==============================================================================

@test "returns TRUE when positional exists" {
  # setup
  local __test__expected_exit_code="${BASH_UTIL__CODE__TRUE}"

  bash_util__args__create_parser 'var_name'
  bash_util__args__add_positional 'var_name' 'positional_name'
  
  # execute
  local __test__exit_code=
  {
    "${__test__command}" 'var_name' 'positional_name'
    __test__exit_code=$?
  } || {
    __test__exit_code=$?
  }
  
  # debug info on failure
  echo >&2 "expected exit code: ${__test__expected_exit_code}"
  echo >&2 "exit code: ${__test__exit_code}"
  
  # assert
  [[ "${__test__exit_code}" -eq "${__test__expected_exit_code}" ]]
}

# ==============================================================================
# positional does not exist
# ==============================================================================

@test "returns FALSE when positional does not exist" {
  # setup
  local __test__expected_exit_code="${BASH_UTIL__CODE__FALSE}"

  bash_util__args__create_parser 'var_name'
  
  # execute
  local __test__exit_code=
  {
    "${__test__command}" 'var_name' 'positional_name'
    __test__exit_code=$?
  } || {
    __test__exit_code=$?
  }
  
  # debug info on failure
  echo >&2 "expected exit code: ${__test__expected_exit_code}"
  echo >&2 "exit code: ${__test__exit_code}"
  
  # assert
  [[ "${__test__exit_code}" -eq "${__test__expected_exit_code}" ]]
}

# ==============================================================================

@test "prints stderr message when positional does not exist" {
  # setup
  local __test__expected_output="positional does not exist: 'positional_name'"

  bash_util__args__create_parser 'var_name'

  # execute
  local __test__output=
  local __test__exit_code=
  {
    __test__output="$("${__test__command}" 'var_name' 'positional_name' 2>&1 1>/dev/null)"
    __test__exit_code=$?
  } || {
    __test__exit_code=$?
  }

  # debug output
  echo >&2 "exit code: ${__test__exit_code}"
  echo >&2 "expected output"
  echo >&2 "----------------"
  echo >&2 "${__test__expected_output}"
  echo >&2 "----------------"
  echo >&2 "output"
  echo >&2 "----------------"
  echo >&2 "${__test__output}"
  echo >&2 "----------------"

  # assert
  [[ "${__test__output}" = *"${__test__expected_output}"* ]]
}
