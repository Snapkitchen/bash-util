# ==============================================================================

@test "prints the keys list name" {
  # setup
  local __test__expected_output='var_name__KEYS'
  
  bash_util__dict__create 'var_name'

  # execute
  local __test__exit_code=
  local __test__output=
  {
    __test__output=$("${__test__command}" 'var_name')
    __test__exit_code=$?
