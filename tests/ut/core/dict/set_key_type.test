#!/usr/bin/env bats

#
# setup
#

setup() {
  # load common lib
  load '../../../lib/common'
  
  # load bash util
  __test__load_bash_util
  
  # set command name
  __test__command='bash_util__dict__set_key_type'
}

#
# tear down
#

# teardown() {
# }

#
# test definitions
#

# ==============================================================================
# key not found
# ==============================================================================

@test "returns NOT_FOUND when dict does not have key" {
  # setup
  local __test__expected_exit_code="${BASH_UTIL__CODE__NOT_FOUND}"

  bash_util__dict__create 'var_name'
  
  # execute
  local __test__exit_code=
  {
    "${__test__command}" 'var_name' 'key_name' "${BASH_UTIL__TYPE__STRING}"
    __test__exit_code=$?
  } || {
    __test__exit_code=$?
  }
  
  # debug info on failure
  echo >&2 "expected exit code: ${__test__expected_exit_code}"
  echo >&2 "exit code: ${__test__exit_code}"
  
  # assert
  [[ "${__test__exit_code}" -eq "${__test__expected_exit_code}" ]]
}

# ==============================================================================
# sets key type
# ==============================================================================

@test "returns OK when setting key type" {
  # setup
  local __test__expected_exit_code="${BASH_UTIL__CODE__OK}"

  bash_util__dict__create 'var_name'
  bash_util__dict__add_key 'var_name' 'key_name' "${BASH_UTIL__TYPE__BOOL}"

  # execute
  local __test__exit_code=
  {
    "${__test__command}" 'var_name' 'key_name' "${BASH_UTIL__TYPE__STRING}"
    __test__exit_code=$?
  } || {
    __test__exit_code=$?
  }

  # debug info on failure
  echo >&2 "expected exit code: ${__test__expected_exit_code}"
  echo >&2 "exit code: ${__test__exit_code}"

  # assert
  [[ "${__test__exit_code}" -eq "${__test__expected_exit_code}" ]]
}

# ==============================================================================

@test "sets key type" {
  # setup
  local __test__expected_output="${BASH_UTIL__TYPE__STRING}"
  
  bash_util__dict__create 'var_name'
  bash_util__dict__add_key 'var_name' 'key_name' "${BASH_UTIL__TYPE__BOOL}"

  # execute
  local __test__exit_code=
  {
    "${__test__command}" 'var_name' 'key_name' "${BASH_UTIL__TYPE__STRING}"
    __test__exit_code=$?
  } || {
    __test__exit_code=$?
  }

  local __test__output=
  __test__output="$(bash_util__dict__get_key_type 'var_name' 'key_name')"

  # debug output
  echo >&2 "exit code: ${__test__exit_code}"
  echo >&2 "expected output"
  echo >&2 "----------------"
  echo >&2 "${__test__expected_output}"
  echo >&2 "----------------"
  echo >&2 "output"
  echo >&2 "----------------"
  echo >&2 "${__test__output}"
  echo >&2 "----------------"

  # assert
  [[ "${__test__output}" = "${__test__expected_output}" ]]
}
